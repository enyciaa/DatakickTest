<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Window -->
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:windowBackground">@color/white_100a</item>

        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/accent</item>

        <!-- Text colors -->
        <item name="android:textColorHint">@color/black_54a</item>
        <item name="android:textColorPrimary">@color/black_70a</item>
        <item name="android:textColorSecondary">@color/black_54a</item>
        <item name="android:textColorTertiary">@color/black_26a</item>
        <item name="android:textColorPrimaryInverse">@color/white_100a</item>
        <item name="android:textColorSecondaryInverse">@color/white_70a</item>
        <item name="android:textColorTertiaryInverse">@color/white_30a</item>
    </style>

</resources>
